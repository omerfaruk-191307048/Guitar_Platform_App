<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:id="@+id/gitar_item_imageViewGitarResim"
        android:scaleType="fitCenter"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gitar adı: "
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gitar adı: "
                android:textSize="16sp"
                android:textColor="@color/black"
                android:id="@+id/gitar_item_txtViewGitarAdi"/>
        </LinearLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Gitar markası: "
               android:layout_marginTop="3dp"
               android:textSize="16sp"
               android:textColor="@color/black"
               android:textStyle="bold" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Gitar markası: "
               android:layout_marginTop="3dp"
               android:textSize="16sp"
               android:textColor="@color/black"
               android:id="@+id/gitar_item_txtViewGitarMarkasi"/>
       </LinearLayout>
        <!--ellipsize: devamı var manasında line'ın sonuna 3 nokta koyar-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gitar türü: "
                android:maxLines="5"
                android:layout_marginTop="3dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gitar türü: "
                android:maxLines="5"
                android:layout_marginTop="3dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:id="@+id/gitar_item_txtViewGitarTuru"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gitar açıklama: "
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginTop="3dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gitar açıklama: "
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginTop="3dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:id="@+id/gitar_item_txtViewGitarAciklama"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gitar_item_btnDetay"
            android:text="Gitarı Görüntüle"
            android:textAllCaps="false"/>
    </LinearLayout>

</LinearLayout>