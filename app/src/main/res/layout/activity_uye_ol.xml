<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A275C"
    android:padding="10dp"
    tools:context=".activities.UyeOl">

  <TextView
      android:id="@+id/uyeol_txtKullanici"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="50dp"
      android:layout_marginTop="50dp"
      android:layout_marginEnd="50dp"
      android:layout_marginBottom="50dp"
      android:gravity="center"
      android:text="Üye Ol"
      android:textColor="@color/loginTxtColor"
      android:textSize="35sp"
      android:textStyle="bold" />

  <EditText
      android:id="@+id/uyeol_editTxtKullanici"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:layout_below="@+id/uyeol_txtKullanici"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="10dp"
      android:layout_marginBottom="10dp"
      android:background="#30ffffff"
      android:drawableLeft="@drawable/baseline_person_24"
      android:drawablePadding="20dp"
      android:hint="Kullanıcı adınız"
      android:padding="20dp"
      android:textColor="@color/white"
      android:textColorHint="@color/white" />

  <EditText
      android:id="@+id/uyeol_editTxtParola"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/uyeol_editTxtKullanici"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="10dp"
      android:layout_marginBottom="10dp"
      android:background="#30ffffff"
      android:drawableLeft="@drawable/baseline_key_24"
      android:drawablePadding="20dp"
      android:hint="Parolanız"
      android:inputType="textPassword"
      android:padding="20dp"
      android:textColor="@color/white"
      android:textColorHint="@color/white" />
  <EditText
      android:id="@+id/uyeol_editTxtParolaDogrula"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/uyeol_editTxtParola"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="10dp"
      android:layout_marginBottom="10dp"
      android:background="#30ffffff"
      android:drawableLeft="@drawable/baseline_key_24"
      android:drawablePadding="20dp"
      android:hint="Parolayı doğrula"
      android:inputType="textPassword"
      android:padding="20dp"
      android:textColor="@color/white"
      android:textColorHint="@color/white" />

  <Button
      android:id="@+id/uyeol_btnUyeOl"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/uyeol_editTxtParolaDogrula"
      android:layout_centerHorizontal="true"
      android:backgroundTint="@color/design_default_color_secondary"
      android:onClick="uyeOl_uyeOlOnClick"
      android:text="ÜYE OL"
      android:layout_marginTop="20dp"
      android:textSize="20sp"
      android:textAllCaps="false"
      android:textColor="@color/white" />

  <Button
      android:id="@+id/uyeol_btnGirisYap"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/uyeol_btnUyeOl"
      android:layout_centerHorizontal="true"
      android:backgroundTint="@color/design_default_color_secondary"
      android:onClick="uyeOl_girisOnClick"
      android:background="@color/trans"
      android:text="Hesabınız zaten var mı? Giriş yapın!"
      android:layout_marginTop="20dp"
      android:textSize="20sp"
      android:textAllCaps="false"
      android:textColor="@color/white" />

  </RelativeLayout>