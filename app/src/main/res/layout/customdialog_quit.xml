<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Çıkış Yap"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:id="@+id/customdialog_resetpass_textViewTitle"
            android:textColor="#000000"/>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Oturumunuzu kapatmak istediğinize emin misiniz?"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:id="@+id/customdialog_resetpass_editTextEmail"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="İptal"
            android:id="@+id/btnCustomdialog_cancel"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Çıkış yap"
            android:layout_marginLeft="15dp"
            android:id="@+id/btnCustomdialog_quit"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>