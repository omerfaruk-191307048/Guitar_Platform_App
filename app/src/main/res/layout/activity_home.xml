<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeActivity">

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/home_activity_frameLayout"
       android:layout_above="@+id/home_activity_bottomNavigationView"/>

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Get Data"
       android:visibility="invisible"
       android:layout_centerHorizontal="true"
       android:onClick="getDataOnClick"/>


   <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/home_activity_bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:itemIconTint="#302C2C"
        app:itemTextColor="#302C2C"
        app:menu="@menu/bottombar_menu" />
</RelativeLayout>